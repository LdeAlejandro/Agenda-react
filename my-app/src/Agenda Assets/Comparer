import React, { useState, useEffect } from 'react';

export function FetchContatos() {
  const [data, setData] = useState([]);
  const [updateContatos, setUpdateContatos] = useState(false);
 

  useEffect(() => {
    const fetchContacts = async () => {
      try {
        const response = await fetch("http://localhost:3000/contatos");
        const data = await response.json();
        setData(data);
      } catch (err) {
        console.error('Api Request contatos Error: ', err);
      }
    };

    fetchContacts();
  }, [updateContatos]);

  const deleteContact = async (id) => {
    try {
      await fetch(`http://localhost:3000/contatos/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
        },
      });
    
      setUpdateContatos(prev => !prev);
    } catch (err) {
      console.error('Api Request Delete Error: ', err);
    }
  };

  const handleClick = (id) => {
    const apagarConfirmacao = window.confirm("Â¿Tem certeza de que deseja apagar este contato?");
    if (apagarConfirmacao) {
      deleteContact(id);
    }
  };

  return (
    <ul>
      {data.map(contato => (
        <li key={contato.id}>
          <h3>{contato.nome}</h3>
          <p>{contato.telefone}</p>
          <p>{contato.email}</p>
          <button>Editar</button>
          <button onClick={() => handleClick(contato.id)}>Apagar</button>
        </li>
      ))}
    </ul>
  );
}
